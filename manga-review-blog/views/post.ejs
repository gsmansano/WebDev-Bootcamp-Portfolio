<%- include("partials/header.ejs") %>

<article class="reader-view">
  <header class="review-hero">
    <div class="hero-image">
      <img src="<%= data.cover_url %>" alt="Cover of <%= data.title_en %>" />
    </div>

    <div class="hero-content">
      <h1 class="manga-title"><%= data.title_en %></h1>
      <h3 class="manga-jp-title"><%= data.title_jp %></h3>

      <div class="manga-details">
        <p><strong>Author:</strong> <%= data.author %></p>
        <p><strong>Genre:</strong> <%= data.genre %></p>
        <p>
          <strong>Rating:</strong>
          <span class="accent-text"><%= data.rating %>/10</span>
        </p>
      </div>

      <a
        href="https://myanimelist.net/manga/<%= data.mal_id %>"
        target="_blank"
        class="mal-link"
      >
        View on MyAnimeList â†—
      </a>
    </div>
  </header>

  <section class="review-body">
    <p class="publish-date">
      Published on: <%= data.date_added.toDateString() %>
    </p>
    <div class="review-text"><%= data.full_review %></div>
  </section>
</article>

<div class="admin-actions">
  <form
    action="/delete-review/<%= data.id %>"
    method="POST"
    onsubmit="return confirm('Are you sure you want to delete this review?');"
  >
    <button type="submit" class="btn-delete">Delete Review</button>
  </form>
  <a href="/edit-review/<%= data.id %>" class="btn-secondary">Edit Review</a>
</div>

<%- include("partials/footer.ejs") %>
